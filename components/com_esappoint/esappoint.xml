<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="2.5.0" method="upgrade">
 
	<name>COM_ESAPPOINT</name>
	<!-- The following elements are optional and free of formatting constraints -->
	<creationDate>Август 2013</creationDate>
	<author>Даминов В.В.</author>
	<authorEmail>vdaminov@gmail.com</authorEmail>
	<!--  The version string is recorded in the components table -->
	<version>0.0.2</version>
	<!-- The description is optional and defaults to the name -->
	<description>COM_ESAPPOINT_DESCRIPTION</description>

	<!-- Site Main File Copy Section -->
	<!-- Note the folder attribute: This attribute describes the folder
		to copy FROM in the package to install therefore files copied
		in this section are copied from /site/ in the package -->
	<files folder="site">
		<filename>index.html</filename>
		<filename>esappoint.php</filename>
		<filename>controller.php</filename>
		<folder>views</folder>
		<folder>models</folder>
		<folder>language</folder>
		<folder>controllers</folder>
	</files>
	<languages folder="site">
		<language tag="en-GB">language/en-GB/en-GB.com_esappoint.ini</language>
		<language tag="ru-RU">language/ru-RU/ru-RU.com_esappoint.ini</language>
	</languages>
	
 
	<administration>
		<!-- Administration Menu Section -->
		<menu>COM_ESAPPOINT_MENU</menu>
		<!-- Administration Main File Copy Section -->
		<!-- Note the folder attribute: This attribute describes the folder
			to copy FROM in the package to install therefore files copied
			in this section are copied from /admin/ in the package -->
		<files folder="admin">
			<!-- Admin Main File Copy Section -->
			<filename>index.html</filename>
			<filename>esappoint.php</filename>
			<filename>controller.php</filename>
			<!-- models files section -->
			<folder>models</folder>
			<!-- views files section -->
			<folder>views</folder>
			<!-- controllers files section -->
			<folder>controllers</folder>
		</files>
		<languages folder="admin">
			<language tag="en-GB">language/en-GB/en-GB.com_esappoint.ini</language>
			<language tag="en-GB">language/en-GB/en-GB.com_esappoint.sys.ini</language>
			<language tag="ru-RU">language/ru-RU/ru-RU.com_esappoint.ini</language>
			<language tag="ru-RU">language/ru-RU/ru-RU.com_esappoint.sys.ini</language>
		</languages>
	</administration>
 
</extension>
